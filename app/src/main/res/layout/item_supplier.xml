<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewSupplier"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewSupplierIcon"
            android:layout_width="135dp"
            android:layout_height="146dp"
            android:padding="@dimen/card_horizontal_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_supplier"
            android:background="@color/black_overlay"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imageViewSupplierIcon"
            android:layout_toEndOf="@+id/imageViewSupplierIcon">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/card_horizontal_margin"
                android:paddingRight="@dimen/card_horizontal_margin"
                android:paddingTop="@dimen/card_vertical_margin"
                android:paddingBottom="@dimen/card_vertical_margin">

                <TextView
                    android:id="@+id/textViewSupplierName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Insert supplier name" />

                <TextView
                    android:id="@+id/textViewSupplierUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Insert supplier username" />

                <TextView
                    android:id="@+id/textViewSupplierDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Insert distance" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_call_grey"
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:id="@+id/textViewSupplierMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/card_horizontal_margin"
                        android:paddingTop="@dimen/card_vertical_margin"
                        android:text="Insert supplier mobile no." />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E0E0E0"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/card_horizontal_margin"
                android:paddingRight="@dimen/card_horizontal_margin"
                android:paddingTop="@dimen/card_vertical_margin"
                android:paddingBottom="@dimen/card_vertical_margin">

                <TextView
                    android:id="@+id/textViewBrands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "Insert brands" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>