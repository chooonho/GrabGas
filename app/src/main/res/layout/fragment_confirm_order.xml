<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".order.ConfirmOrderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Details"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white_overlay"
                    android:padding="@dimen/card_horizontal_margin"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_horizontal_margin">

                    <ImageView
                        android:id="@+id/icon_customer_name"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person_black"/>

                    <TextView
                        android:id="@+id/textViewCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_customer_name"
                        android:layout_toEndOf="@+id/icon_customer_name"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textSize="18sp"
                        android:text="Customer Name" />

                    <TextView
                        android:id="@+id/textViewCustomerUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_customer_name"
                        android:layout_toEndOf="@+id/icon_customer_name"
                        android:layout_alignBottom="@+id/icon_customer_name"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textSize="12sp"
                        android:text="Customer Username" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_horizontal_margin">

                    <ImageView
                        android:id="@+id/icon_supplier_name"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_supplier_modified"/>

                    <TextView
                        android:id="@+id/textViewSupplierName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_supplier_name"
                        android:layout_toEndOf="@+id/icon_supplier_name"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:layout_alignParentTop="true"
                        android:textSize="18sp"
                        android:text="Supplier Name" />

                    <TextView
                        android:id="@+id/textViewSupplierUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_supplier_name"
                        android:layout_toEndOf="@+id/icon_supplier_name"
                        android:layout_alignBottom="@+id/icon_supplier_name"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textSize="12sp"
                        android:text="Supplier Username" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_horizontal_margin">

                    <ImageView
                        android:id="@+id/icon_brand_name"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_gas"/>

                    <TextView
                        android:id="@+id/textViewBrandName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_brand_name"
                        android:layout_toEndOf="@+id/icon_brand_name"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:layout_alignParentTop="true"
                        android:textSize="18sp"
                        android:text="Brand Name" />

                    <TextView
                        android:id="@+id/textViewSelectQuantity"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:layout_toRightOf="@+id/icon_brand_name"
                        android:layout_toEndOf="@+id/icon_brand_name"
                        android:layout_alignBottom="@+id/icon_brand_name"
                        android:textSize="12sp"
                        android:layout_gravity="bottom"
                        android:text="Select Quantity" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="40dp"
                        android:background="#E0E0E0"
                        android:visibility="visible"
                        android:layout_toLeftOf="@+id/spinnerQuantity"
                        android:layout_toStartOf="@+id/spinnerQuantity" />

                    <Spinner
                        android:id="@+id/spinnerQuantity"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@+id/textViewBrandName"
                        android:layout_toEndOf="@+id/textViewBrandName"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_horizontal_margin">

                    <ImageView
                        android:id="@+id/icon_price"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_money_black"/>

                    <TextView
                        android:id="@+id/textViewTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_price"
                        android:layout_toEndOf="@+id/icon_price"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:layout_alignParentTop="true"
                        android:textSize="18sp"
                        android:text="RM 0.00" />

                    <TextView
                        android:id="@+id/textViewSinglePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_price"
                        android:layout_toEndOf="@+id/icon_price"
                        android:layout_alignBottom="@+id/icon_price"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textSize="12sp"
                        android:text="RM 0.00 ea" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_horizontal_margin">

                    <ImageView
                        android:id="@+id/icon_date"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_date_black"/>

                    <DatePicker
                        android:id="@+id/datePickerDeliveryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_date"
                        android:layout_toEndOf="@+id/icon_date"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:datePickerMode="calendar" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_horizontal_margin">

                    <ImageView
                        android:id="@+id/icon_time"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_time_black"/>

                    <TimePicker
                        android:id="@+id/timePickerDeliveryTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_time"
                        android:layout_toEndOf="@+id/icon_time"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:timePickerMode="clock" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"
                    android:visibility="visible" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>
